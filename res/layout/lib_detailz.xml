<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_background"
    android:orientation="vertical"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/libImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/blue_background"
        android:contentDescription="@string/lib_logo"
        android:padding="16dp"
        android:scaleType="fitCenter" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/libUrlTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/green_background"
            android:gravity="center"
            android:shadowColor="#44000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/libNameTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_background"
            android:gravity="center"
            android:shadowColor="#44000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/progressContentDescription"
            android:scaleType="centerCrop"
            android:src="@drawable/two_androids" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:progress="50" />

        <TextView
            android:id="@+id/startProgressButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_background"
            android:gravity="center"
            android:shadowColor="#44000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1.5"
            android:text="@string/startProgress"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </FrameLayout>

</LinearLayout>